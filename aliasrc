alias cat=bat
alias nc=ncat
alias man="batman"
alias tb="nc termbin.com 9999"

alias ls='exa -h --icons --color=always'
alias l='ls -al'
alias ll='ls -l'
alias la=l
alias dir=ls

alias cls="clear"
alias c="clear"
alias findstr="grep --color=auto -RHIni"
alias zrel="omz reload"
alias sudoe="sudoedit"

alias mkdir="mkdir -p"
alias cp="cp -r"

alias py="python3"
alias pip="python3 -m pip"

alias cd="z"


alias gpura="git pull --rebase --autostash"


## Change your editor in ~/.exportrc
alias edit="$EDITOR"
alias vi="$EDITOR"
alias nano="$EDITOR"
alias vim="$EDITOR"

alias yay="paru"
alias upd="yay -Syu"
alias yaz="paruz"

alias logoff="sudo systemctl restart lightdm"

alias rr='curl -s -L https://raw.githubusercontent.com/keroserene/rickrollrc/master/roll.sh | bash'
